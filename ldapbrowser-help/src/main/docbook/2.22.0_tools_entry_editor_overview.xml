				<tgroup cols="4">
					<colspec colname="Attribute class" colwidth="2*" />
					<colspec colname="Default font" colwidth="1*" />
					<colspec colname="Default color" colwidth="1*" />
					<colspec colname="Example" colwidth="5*" />
					<thead>
						<row>
							<entry>Attribute class</entry>
							<entry>Default font</entry>
							<entry>Default color</entry>
							<entry>Example</entry>
						</row>
					</thead>
					<tbody>
						<row>
							<entry>objectClass attribute</entry>
							<entry>bold and italic</entry>
							<entry>black</entry>
							<entry>
								<screenshot>
									<mediaobject>
										<imageobject>
											<imagedata scale="50"
												fileref="images/tools_entry_editor_3.png" format="PNG" />
										</imageobject>
									</mediaobject>
								</screenshot>
							</entry>
						</row>
						<row>
							<entry>Must attributes</entry>
							<entry>bold</entry>
							<entry>black</entry>
							<entry>
								<screenshot>
									<mediaobject>
										<imageobject>
											<imagedata scale="50"
												fileref="images/tools_entry_editor_4.png" format="PNG" />
										</imageobject>
									</mediaobject>
								</screenshot>
							</entry>
						</row>
						<row>
							<entry>May attributes</entry>
							<entry>normal</entry>
							<entry>black</entry>
							<entry>
								<screenshot>
									<mediaobject>
										<imageobject>
											<imagedata scale="50"
												fileref="images/tools_entry_editor_5.png" format="PNG" />
										</imageobject>
									</mediaobject>
								</screenshot>
							</entry>
						</row>
						<row>
							<entry>Operational attributes</entry>
							<entry>italic</entry>
							<entry>black</entry>
							<entry>
								<screenshot>
									<mediaobject>
										<imageobject>
