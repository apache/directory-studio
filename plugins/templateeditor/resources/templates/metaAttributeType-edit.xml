<template
	id="org.apache.directory.studio.templateeditor.templates.metaAttributeType-edit"
	title="MetaAttributeType - Edit">
	<objectClasses>
		<structural>metaAttributeType</structural>
	</objectClasses>
	<form>
		<!-- GENERAL INFORMATION -->
		<section title="General Information" numberOfColumns="2"
			equalColumns="false" horizontalAlignment="fill"
			grabExcessHorizontalSpace="true">
			<!-- Name -->
			<label value="Name:" horizontalAlignment="end" width="125" />
			<textfield attributeType="m-name" horizontalAlignment="fill"
				grabExcessHorizontalSpace="true" />

			<!-- OID -->
			<label value="OID:" horizontalAlignment="end" />
			<textfield attributeType="m-oid" horizontalAlignment="fill"
				grabExcessHorizontalSpace="true" />

			<!-- Description -->
			<label value="Description:" horizontalAlignment="end" />
			<textfield attributeType="m-description" numberOfRows="3"
				horizontalAlignment="fill" grabExcessHorizontalSpace="true" />
		</section>

		<!-- PROPERTIES -->
		<section title="Properties" numberOfColumns="2" equalColumns="false"
			horizontalAlignment="fill" grabExcessHorizontalSpace="true">
			<!-- Superior -->
			<label value="Superior:" horizontalAlignment="end" width="125" />
			<textfield attributeType="m-supAttributeType"
				horizontalAlignment="fill" grabExcessHorizontalSpace="true" />

			<!-- Usage -->
			<label value="Usage:" horizontalAlignment="end" />
			<textfield attributeType="m-usage" horizontalAlignment="fill"
				grabExcessHorizontalSpace="true" />

			<!-- Syntax -->
			<label value="Syntax:" horizontalAlignment="end" />
			<textfield attributeType="m-syntax" horizontalAlignment="fill"
				grabExcessHorizontalSpace="true" />

			<!-- Obsolete -->
			<label value="Obsolete:" horizontalAlignment="end"
				verticalAlignment="center" />
			<checkbox attributeType="m-obsolete" />

			<!-- Collective -->
			<label value="Collective:" horizontalAlignment="end" />
			<checkbox attributeType="m-collective" />

			<!-- Single-Value -->
			<label value="Single-Value:" horizontalAlignment="end" />
			<checkbox attributeType="m-singleValue" />

			<!-- No-User-Modification -->
			<label value="No-User-Modification:" horizontalAlignment="end" />
			<checkbox attributeType="m-noUserModification" />
		</section>

		<!-- MATCHING RULES -->
		<section title="Matching Rules" numberOfColumns="2" equalColumns="false"
			horizontalAlignment="fill" grabExcessHorizontalSpace="true">
			<!-- Equality -->
			<label value="Equality:" horizontalAlignment="end" width="125" />
			<textfield attributeType="m-equality" horizontalAlignment="fill"
				grabExcessHorizontalSpace="true" />

			<!-- Ordering -->
			<label value="Ordering:" horizontalAlignment="end" />
			<textfield attributeType="m-ordering" horizontalAlignment="fill"
				grabExcessHorizontalSpace="true" />

			<!-- Substring -->
			<label value="Substring:" horizontalAlignment="end" />
			<textfield attributeType="m-substr" horizontalAlignment="fill"
				grabExcessHorizontalSpace="true" />
		</section>
	</form>
</template>
