	<simplesect id="tools_browser_view_contextmenu_deleteall">
		<title>Advanced > Delete All</title>
		<para>
			<itemizedlist>
				<listitem>
					<para>
						Icon:
						<guiicon>
							<inlinemediaobject>
								<imageobject>
									<imagedata scale="50" fileref="icons/delete_all.png"
										format="PNG" />
								</imageobject>
							</inlinemediaobject>
						</guiicon>
					</para>
				</listitem>
				<listitem>
					<para>
						Description: The action depends on the selected element type:
						<itemizedlist>
							<listitem>
								Entry: The children entries of the selected entry are
								deleted physically
								from directory. It is not possible to delete
								base entries or the
								root DSE.
							</listitem>
							<listitem>
								Search or 'Searches' category: All the searches are
								removed from the view. No entries from directory are deleted.
							</listitem>
							<listitem>
								Bookmark or 'Bookmarks' category: All the bookmarks are
								removed from the view. No entries from directory are deleted.
							</listitem>
						</itemizedlist>
					</para>
				</listitem>
				<listitem>
					<para>
						Enabled: If an entry, search, bookmark, the 'Searches' or
						'Bookmarks' category is
						selected.
					</para>
				</listitem>
			</itemizedlist>
		</para>
	</simplesect>

